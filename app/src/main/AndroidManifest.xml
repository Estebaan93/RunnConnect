<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <application
      android:allowBackup="true"
      android:dataExtractionRules="@xml/data_extraction_rules"
      android:fullBackupContent="@xml/backup_rules"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:largeHeap="true"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/Theme.RunnConnect"
      android:usesCleartextTraffic="true">

    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="AIzaSyCG4X0oGEfgj3yFX_8baCTCaoonXlK82zU" />

    <activity
        android:name=".ui.login.LoginActivity"
        android:exported="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.RunnConnect.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
        android:name=".MainActivity"
        android:exported="false"
        android:theme="@style/Theme.RunnConnect.NoActionBar">
    </activity>

    <activity android:name=".ui.eventosPublicos.EventosPublicosActivity" />

    <activity
        android:name=".ui.eventosPublicos.detalle.DetalleEventoPublicoActivity"
        android:label="Detalle del Evento"
        android:parentActivityName=".ui.eventosPublicos.EventosPublicosActivity" />

    <activity
        android:name=".ui.eventosPublicos.mapa.MapaPublicoActivity"
        android:label="Recorrido del Evento"
        android:screenOrientation="portrait"/>

    <activity
        android:name=".ui.registro.RegisterRunnerActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustResize"/>

    <activity
        android:name=".ui.registro.RegisterOrganizadorActivity"
        android:exported="false"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustResize"/>

  </application>

</manifest>
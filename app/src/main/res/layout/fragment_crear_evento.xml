<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp">

    <TextView
        android:id="@+id/tvTituloPagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Evento"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvMensajeGlobal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTituloPagina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/lblTitulo" android:text="Título" app:layout_constraintTop_toBottomOf="@id/tvMensajeGlobal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <EditText android:id="@+id/etTitulo" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@android:drawable/edit_text" app:layout_constraintTop_toBottomOf="@id/lblTitulo"/>

    <TextView android:id="@+id/lblDescripcion" android:text="Descripción" app:layout_constraintTop_toBottomOf="@id/etTitulo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"/>
    <EditText android:id="@+id/etDescripcion" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@android:drawable/edit_text" app:layout_constraintTop_toBottomOf="@id/lblDescripcion"/>

    <TextView android:id="@+id/lblFecha" android:text="Fecha y Hora" app:layout_constraintTop_toBottomOf="@id/etDescripcion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout android:id="@+id/contFecha" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@id/lblFecha">
      <EditText android:id="@+id/etFecha" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="Fecha" android:focusable="false" android:clickable="true"/>
      <EditText android:id="@+id/etHora" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="Hora" android:focusable="false" android:clickable="true"/>
    </LinearLayout>

    <TextView android:id="@+id/lblUbicacion" android:text="Ubicación" app:layout_constraintTop_toBottomOf="@id/contFecha" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"/>
    <EditText android:id="@+id/etUbicacion" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@android:drawable/edit_text" app:layout_constraintTop_toBottomOf="@id/lblUbicacion"/>


    <TextView
        android:id="@+id/lblDatosPago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos de Pago (CBU / Alias)"
        android:textColor="#616161"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etUbicacion"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etDatosPago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:gravity="top|start"
        android:hint="Ej: Alias: RUNNERS.SL - Titular: Juan Perez"
        android:background="@android:drawable/edit_text"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/lblDatosPago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/etDatosPago"/>

    <TextView
        android:id="@+id/tvTituloCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoría Principal"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvSubCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Ej: 10K General. Podrás agregar más luego)"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloCat"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/lblCatNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Distancia"
        android:textColor="#616161"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubCat"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etCatNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej: 10K Competitiva"
        android:inputType="textCapWords"
        android:background="@android:drawable/edit_text"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/lblCatNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lblCatPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio Inscripción ($)"
        android:textColor="#616161"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etCatNombre"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etCatPrecio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:paddingVertical="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/lblCatPrecio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etCupo"/>

    <TextView
        android:id="@+id/lblCupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cupo Total Evento"
        android:textColor="#616161"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/etCatNombre"
        app:layout_constraintStart_toStartOf="@+id/etCupo"/>

    <EditText
        android:id="@+id/etCupo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:paddingVertical="12dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/lblCupo"
        app:layout_constraintStart_toEndOf="@+id/etCatPrecio"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnPublicar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Publicar Evento"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/etCatPrecio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
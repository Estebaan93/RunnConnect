<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

  <TextView
      android:id="@+id/tvTituloDetalle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Título del Evento"
      android:textSize="22sp"
      android:textStyle="bold"
      android:textColor="@android:color/black"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/tvEstadoDetalle"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginEnd="8dp"/>

  <TextView
      android:id="@+id/tvEstadoDetalle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ESTADO"
      android:background="@drawable/bg_spinner_border"
      android:paddingHorizontal="12dp"
      android:paddingVertical="6dp"
      android:textSize="12sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/tvTituloDetalle"
      app:layout_constraintBottom_toBottomOf="@id/tvTituloDetalle"/>

  <TextView
      android:id="@+id/tvFechaDetalle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:text="--/--/----"
      android:textSize="16sp"
      android:drawablePadding="8dp"
      app:drawableStartCompat="@android:drawable/ic_menu_my_calendar"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvTituloDetalle"/>

  <TextView
      android:id="@+id/tvLugarDetalle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Ubicación"
      android:textSize="16sp"
      android:drawablePadding="8dp"
      app:drawableStartCompat="@android:drawable/ic_menu_mylocation"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvFechaDetalle"/>

  <TextView
      android:id="@+id/tvDistanciaTipo"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Distancia - Modalidad"
      android:textSize="15sp"
      android:textStyle="bold"
      android:textColor="#424242"
      android:drawablePadding="8dp"
      android:layout_marginTop="12dp"
      app:drawableStartCompat="@android:drawable/ic_menu_directions"
      app:layout_constraintTop_toBottomOf="@id/tvLugarDetalle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/tvGeneroPrecio"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Género - Precio"
      android:textSize="15sp"
      android:textColor="#424242"
      android:drawablePadding="8dp"
      android:layout_marginTop="8dp"
      app:drawableStartCompat="@android:drawable/ic_menu_info_details"
      app:layout_constraintTop_toBottomOf="@id/tvDistanciaTipo"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <View
      android:id="@+id/divider1"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#E0E0E0"
      android:layout_marginTop="20dp"
      app:layout_constraintTop_toBottomOf="@id/tvGeneroPrecio"/>

  <TextView
      android:id="@+id/lblInscriptos"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="INSCRIPTOS"
      android:textSize="12sp"
      android:textColor="#757575"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@id/divider1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/lblCupo"
      app:layout_constraintHorizontal_chainStyle="spread"/>

  <TextView
      android:id="@+id/lblCupo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="CUPO TOTAL"
      android:textSize="12sp"
      android:textColor="#757575"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@id/divider1"
      app:layout_constraintStart_toEndOf="@id/lblInscriptos"
      app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
      android:id="@+id/tvInscriptosCount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textSize="28sp"
      android:textStyle="bold"
      android:textColor="@android:color/black"
      app:layout_constraintTop_toBottomOf="@id/lblInscriptos"
      app:layout_constraintStart_toStartOf="@id/lblInscriptos"
      app:layout_constraintEnd_toEndOf="@id/lblInscriptos"/>

  <TextView
      android:id="@+id/tvCupoTotal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="0"
      android:textSize="28sp"
      android:textStyle="bold"
      android:textColor="@android:color/black"
      app:layout_constraintTop_toBottomOf="@id/lblCupo"
      app:layout_constraintStart_toStartOf="@id/lblCupo"
      app:layout_constraintEnd_toEndOf="@id/lblCupo"/>

  <TextView
      android:id="@+id/lblDesc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Descripción"
      android:textStyle="bold"
      android:layout_marginTop="32dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvInscriptosCount"/>

  <TextView
      android:id="@+id/tvDescripcion"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="..."
      android:layout_marginTop="8dp"
      android:ellipsize="end"
      android:layout_marginBottom="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/lblDesc"
      app:layout_constraintBottom_toTopOf="@id/layoutBotones"/>

  <LinearLayout
      android:id="@+id/layoutBotones"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@id/btnVerMapa"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCambiarEstado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Estado"
        android:backgroundTint="#FF9800"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconGravity="textStart"
        android:layout_marginEnd="4dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditarInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Editar Info"
        android:backgroundTint="#2196F3"
        app:icon="@android:drawable/ic_menu_agenda"
        app:iconGravity="textStart"
        android:layout_marginStart="4dp"/>

  </LinearLayout>

  <com.google.android.material.button.MaterialButton
      android:id="@+id/btnVerMapa"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Ver / Editar Ruta"
      app:icon="@android:drawable/ic_dialog_map"
      app:iconGravity="textStart"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp"
    android:paddingHorizontal="8dp"
    android:background="@drawable/bg_spinner_border"
    android:layout_marginBottom="6dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/tvCatNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="10K Calle"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvCatPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$15000"
        android:textStyle="bold"
        android:textColor="#2E7D32"/>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="4dp">

    <TextView
        android:id="@+id/tvCatInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="18-99 aÃ±os | Mixto"
        android:textSize="12sp"
        android:textColor="#616161"/>

    <TextView
        android:id="@+id/tvCatInscriptos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscriptos: 0"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#1976D2"/>
  </LinearLayout>

</LinearLayout>
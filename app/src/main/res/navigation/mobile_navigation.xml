<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_inicio">

  <fragment
      android:id="@+id/nav_inicio"
      android:name="com.example.runnconnect.ui.inicio.InicioFragment"
      android:label="Inicio Feed"
      tools:layout="@layout/fragment_inicio" />

  <fragment
      android:id="@+id/nav_cerrar_sesion"
      android:name="com.example.runnconnect.ui.cerrarSesion.LogoutFragment"
      android:label="Cerrar SesiÃ³n"
      tools:layout="@layout/fragment_logout" />

  <fragment
      android:id="@+id/nav_perfil"
      android:name="com.example.runnconnect.ui.runner.perfil.PerfilRunnerFragment"
      android:label="Mi Perfil"
      tools:layout="@layout/fragment_perfil_runner"/>

  <fragment
      android:id="@+id/nav_perfil_organizador"
      android:name="com.example.runnconnect.ui.organizador.perfil.PerfilOrganizadorFragment"
      android:label="Perfil Comercial"
      tools:layout="@layout/fragment_perfil_organizador" />

  <fragment
      android:id="@+id/nav_crear_evento"
      android:name="com.example.runnconnect.ui.organizador.crearEvento.CrearEventoFragment"
      android:label="Publicar Evento"
      tools:layout="@layout/fragment_crear_evento">

    <action
        android:id="@+id/action_crear_a_mapaEditor"
        app:destination="@id/nav_mapa_editor" />

  </fragment>

  <fragment
      android:id="@+id/nav_mapa_editor"
      android:name="com.example.runnconnect.ui.organizador.mapa.MapaEditorFragment"
      android:label="Dibujar Ruta"
      tools:layout="@layout/fragment_editor_mapa">

    <argument
        android:name="idEvento"
        app:argType="integer"
        android:defaultValue="0" />
  </fragment>

  <fragment
      android:id="@+id/nav_mis_eventos"
      android:name="com.example.runnconnect.ui.organizador.misEventos.MisEventosFragment"
      android:label="Mis Eventos"
      tools:layout="@layout/fragment_mis_eventos" />

</navigation>